<div>
  <div>
    <div><%= device.serial_number %></div>
    <div><%= device.registration_date %></div>
    <div><%= device.firmware_version %></div>
    <div><%= device.sensors.count %></div>
    <div><%= device.readings.count %></div>
  </div>

  <div>
    <% chart_options = {"min":22, "max":32, "xtitle":"Time", "ytitle": "Temperature (CÂ°)"} %>
    <%= line_chart device_sensor_readings_path(device, attribute: :temperature, end_time: chart_end_time, range: 1.day.to_i), **chart_options %>

    <%= link_to_change_chart "today", chart_options, @chartkick_chart_id, device_sensor_readings_path(device, attribute: :temperature, end_time: chart_end_time, range: 1.day.to_i) %>
    <%= link_to_change_chart "this week", chart_options, @chartkick_chart_id, device_sensor_readings_path(device, attribute: :temperature, end_time: chart_end_time, range: 1.week.to_i) %>
    <%= link_to_change_chart "this month", chart_options, @chartkick_chart_id, device_sensor_readings_path(device, attribute: :temperature, end_time: chart_end_time, range: 1.month.to_i) %>
    <%= link_to_change_chart "this year", chart_options, @chartkick_chart_id, device_sensor_readings_path(device, attribute: :temperature, end_time: chart_end_time, range: 1.year.to_i) %>
  </div>
  <div>
    <% chart_options = {xtitle: "Time", min: 25, max: 75, ytitle: "Humidity (%)"} %>
    <%= line_chart device_sensor_readings_path(device, attribute: :humidity, end_time: chart_end_time, range: 1.day.to_i), **chart_options %>
    <%= link_to_change_chart "today", chart_options, @chartkick_chart_id, device_sensor_readings_path(device, attribute: :humidity, end_time: chart_end_time, range: 1.day.to_i) %>
    <%= link_to_change_chart "this week", chart_options, @chartkick_chart_id, device_sensor_readings_path(device, attribute: :humidity, end_time: chart_end_time, range: 1.week.to_i) %>
    <%= link_to_change_chart "this month", chart_options, @chartkick_chart_id, device_sensor_readings_path(device, attribute: :humidity, end_time: chart_end_time, range: 1.month.to_i) %>
    <%= link_to_change_chart "this year", chart_options, @chartkick_chart_id, device_sensor_readings_path(device, attribute: :humidity, end_time: chart_end_time, range: 1.year.to_i) %>
  </div>

  <div>
    <% chart_options = {xtitle: "Time", min: 0, max: 12, ytitle: "CO (ppm)"} %>
    <%= line_chart device_sensor_readings_path(device, attribute: :carbon_monoxide, end_time: chart_end_time, range: 1.day.to_i), **chart_options %>
    <%= link_to_change_chart "today", chart_options, @chartkick_chart_id, device_sensor_readings_path(device, attribute: :carbon_monoxide, end_time: chart_end_time, range: 1.day.to_i) %>
    <%= link_to_change_chart "this week", chart_options, @chartkick_chart_id, device_sensor_readings_path(device, attribute: :carbon_monoxide, end_time: chart_end_time, range: 1.week.to_i) %>
    <%= link_to_change_chart "this month", chart_options, @chartkick_chart_id, device_sensor_readings_path(device, attribute: :carbon_monoxide, end_time: chart_end_time, range: 1.month.to_i) %>
    <%= link_to_change_chart "this year", chart_options, @chartkick_chart_id, device_sensor_readings_path(device, attribute: :carbon_monoxide, end_time: chart_end_time, range: 1.year.to_i) %>
  </div>
</div>